<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <record id="wilayah_kota_form" model="ir.ui.view">
            <field name="name">wilayah.kota.form</field>
            <field name="model">wilayah.kota</field>
            <field name="arch" type="xml">
                <form string="Wilayah kota">
                    <sheet>
                        <group>
                            <field name="kode_kabkot"/>
                            <field name="kode_provinsi_id"/>
                            <field name="nama_kabupaten_kota"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="wilayah_kota_tree" model="ir.ui.view">
            <field name="name">wilayah.kota.tree</field>
            <field name="model">wilayah.kota</field>
            <field name="arch" type="xml">
                <tree string="Wilayah kota">
                    <field name="kode_kabkot"/>
                    <field name="kode_provinsi_id"/>
                    <field name="nama_kabupaten_kota"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
